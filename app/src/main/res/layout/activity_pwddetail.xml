<?xml version="1.0" encoding="utf-8"?>
<GridLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:rowCount="2"
    android:columnCount="4"
    android:orientation="horizontal"
    android:layout_gravity="center_horizontal">
        <EditText  android:id="@+id/pwdName"
                    android:layout_height="wrap_content"
                    android:layout_width="280px"
                    android:layout_rowSpan="2"
                    android:layout_gravity="center"
                    android:gravity="center_vertical"
                    android:enabled="false"
                    android:text=""
                    android:textSize="35px"/>
        <GridLayout     android:layout_width="600px"
                         android:layout_height="wrap_content"
                         android:rowCount="2"
                         android:columnCount="1"
                         android:orientation="vertical">
                <EditText android:id="@+id/pwdAccount"
                           android:layout_height="wrap_content"
                           android:layout_width="match_parent"
                           android:paddingLeft="15dp"
                           android:enabled="false"
                           android:text=""/>
                <EditText android:id="@+id/pwdPsd"
                           android:layout_height="wrap_content"
                           android:layout_width="match_parent"
                           android:paddingLeft="15dp"
                           android:enabled="false"
                          android:text=""/>
        </GridLayout>
        <GridLayout     android:layout_width="160px"
            android:layout_height="wrap_content"
            android:rowCount="2"
            android:columnCount="1"
            android:orientation="vertical">
       <Button     android:id="@+id/pwdChangeBtn"
                   android:layout_height="120px"
                   android:layout_width="150px"
                   android:text="修改"
                   android:layout_gravity="center"
                   android:padding="0dp"
                   android:focusable="false"/>
                <Button     android:id="@+id/pwdDelBtn"
                    android:layout_height="120px"
                    android:layout_width="150px"
                    android:text="删除"
                    android:layout_gravity="center"
                    android:padding="0dp"
                    android:focusable="false"/>
                </GridLayout>
</GridLayout >

