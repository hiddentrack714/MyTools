<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginLeft="20px"
    android:layout_marginRight="20px">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wifi状态:"
        android:layout_gravity="center_vertical"/>
        <TextView
            android:layout_width="100px"
            android:layout_height="wrap_content"
            android:text="关闭"/>
        <Switch
            android:id="@+id/staticWifiStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textOff="off"
            android:textOn="on"/>
        <TextView
            android:layout_width="100px"
            android:layout_height="wrap_content"
            android:text="开启"/>
</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="连接模式:"
            android:layout_gravity="center_vertical"/>
        <RadioGroup
            android:id="@+id/ipRG"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RadioButton
                android:id="@+id/wifiMode1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DHCP"/>
            <RadioButton
                android:id="@+id/wifiMode2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="静态"/>
            <RadioButton
                android:id="@+id/wifiMode3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="未连接"/>
        </RadioGroup>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/wifilayout">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="WifiId:"/>
            <Spinner
                android:id="@+id/staticWifiId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Password:"/>
            <EditText
                android:id="@+id/staticPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/iplayout">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="静态IP地址:"/>
        <EditText
            android:id="@+id/staticIp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:enabled="false"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="网关:"/>
        <EditText
            android:id="@+id/staticGateWay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:enabled="false"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="网络前置长度:"/>
        <EditText
            android:id="@+id/staticSuffix"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:enabled="false"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DNS1:"/>
        <Spinner
            android:id="@+id/staticDNS1"
            android:layout_width="600px"
            android:layout_height="wrap_content"
            android:entries="@array/spingarr">
        </Spinner>
    </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/ipUpdBtn"
            android:layout_width="150px"
            android:layout_height="wrap_content"
            android:text="修改"/>
        <Button
            android:id="@+id/ipForgetBtn"
            android:layout_width="400px"
            android:layout_height="wrap_content"
            android:text="忘记密码" />
        <Button
            android:id="@+id/ipSetBtn"
            android:layout_width="400px"
            android:layout_height="wrap_content"
            android:text="连接Wifi" />
    </LinearLayout>
</LinearLayout>
