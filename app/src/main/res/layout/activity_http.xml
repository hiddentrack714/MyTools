<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="http连接:"/>
        <EditText
            android:id="@+id/httpUrl"
            android:layout_width="780px"
            android:layout_height="wrap_content"
            android:text=""
            android:singleLine="true"/>
        <Button
            android:id="@+id/httpCopyBtn"
            android:layout_width="150px"
            android:layout_height="130px"
            android:text="复制"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="单一下载:"/>
        <Switch
            android:id="@+id/httpSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textOff="off"
            android:textOn="on"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="线程数量:"/>
        <EditText
            android:id="@+id/httpThread"
            android:layout_width="120px"
            android:layout_height="wrap_content"
            android:text="15"
            android:gravity="center"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:layout_marginLeft="20px"/>
        <SeekBar
            android:id="@+id/httpSeek"
            android:layout_width="600px"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:max="50"
            android:progress="15"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="50"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="文件后缀:"/>
        <EditText
            android:id="@+id/httpSuff"
            android:layout_width="150px"
            android:layout_height="wrap_content"
            android:text="jpg"
            android:gravity="center"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="下载地址:"/>
        <EditText
            android:id="@+id/httpDir"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="/sdcard/UCdownloads/"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <Button
            android:id="@+id/httpDownBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="下载"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10px">
        <TextView
            android:layout_width="80px"
            android:layout_height="wrap_content"
            android:text="编号"
            android:gravity="center"/>
        <TextView
            android:layout_width="580px"
            android:layout_height="wrap_content"
            android:text="下载进度"
            android:layout_gravity="center"
            android:gravity="center"/>
        <TextView
            android:layout_width="220px"
            android:layout_height="wrap_content"
            android:text="文件大小(byte)"
            android:gravity="center"/>
        <TextView
            android:layout_width="220px"
            android:layout_height="wrap_content"
            android:text="文件名称"
            android:gravity="center"/>
    </LinearLayout>

    <ListView
        android:id="@+id/httpList"
        android:layout_width="match_parent"
        android:layout_height="460dp"
        android:paddingTop="7dip"
        android:paddingLeft="7dip"
        android:paddingRight="7dip"
        android:paddingBottom="7dip"/>
</LinearLayout>
