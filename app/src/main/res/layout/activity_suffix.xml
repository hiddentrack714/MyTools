<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="35dp"
            android:layout_height="wrap_content"
            android:text="@string/ml"/>
        <EditText
            android:id="@+id/suffixPath"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:singleLine="true"
            android:inputType="text"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="35dp"
            android:layout_height="wrap_content"
            android:text="@string/hz"/>
        <EditText
            android:id="@+id/suffixType"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:singleLine="true"
            android:inputType="text"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="35dp"
            android:layout_height="wrap_content"
            android:text="@string/gl"/>
        <EditText
            android:id="@+id/suffixFilter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:singleLine="true"
            android:inputType="text"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">
        <Button
            android:id="@+id/suffixEditBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/xg"
            android:layout_gravity="center"
            style="?android:attr/buttonStyle"/>
        <Button
            android:id="@+id/suffixDelBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/schz"
            style="?android:attr/buttonStyle"/>
        <Button
            android:id="@+id/suffixAddBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tjhz"
            style="?android:attr/buttonStyle"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_marginTop="15dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/jdt"
            android:layout_gravity="center"
            android:gravity="center_horizontal"/>
        <ProgressBar
            android:id="@+id/suffixProBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:visibility="visible"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:max="100"
            android:progress="0"/>
        <TextView
            android:id="@+id/viewPercent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/zhz"
            android:layout_gravity="center"
            android:gravity="center_horizontal"/>
    </LinearLayout>
</LinearLayout>
