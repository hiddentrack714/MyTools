<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginLeft="20px"
    android:layout_marginRight="20px">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="190px"
            android:layout_height="wrap_content"
            android:text="蚂蚁森林X:"/>
        <EditText
            android:id="@+id/nlX"
            android:layout_width="250px"
            android:layout_height="wrap_content"
            android:enabled="false"/>
        <TextView
            android:layout_width="190px"
            android:layout_height="wrap_content"
            android:text="蚂蚁森林Y:"/>
        <EditText
            android:id="@+id/nlY"
            android:layout_width="250px"
            android:layout_height="wrap_content"
            android:enabled="false"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="150px"
            android:layout_height="wrap_content"
            android:text="能量球X:"/>
        <EditText
            android:id="@+id/ballX"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:enabled="false"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="150px"
            android:layout_height="wrap_content"
            android:text="能量球Y:"/>
        <EditText
            android:id="@+id/ballY"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:enabled="false"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="180px"
            android:layout_height="wrap_content"
            android:text="成熟时间:"/>
        <EditText
            android:id="@+id/nlHour"
            android:layout_width="120px"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:gravity="center"/>
        <TextView
            android:layout_width="50px"
            android:layout_height="wrap_content"
            android:text="时"/>
        <EditText
            android:id="@+id/nlMinute"
            android:layout_width="120px"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:gravity="center"/>
        <TextView
            android:layout_width="50px"
            android:layout_height="wrap_content"
            android:text="分"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="180px"
            android:layout_height="wrap_content"
            android:text="是否当天:"/>
        <CheckBox
            android:id="@+id/nlCheck"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="180px"
            android:layout_height="wrap_content"
            android:text="点击次数:"/>
        <EditText
            android:id="@+id/nlClick"
            android:layout_width="120px"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:gravity="center"/>
        <TextView
            android:layout_width="80px"
            android:layout_height="wrap_content"
            android:text="次"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="180px"
            android:layout_height="wrap_content"
            android:text="倒计时:"/>
        <EditText
            android:id="@+id/nlDiffHour"
            android:layout_width="100px"
            android:layout_height="wrap_content"
            android:text="00"
            android:enabled="false"/>
        <TextView
            android:layout_width="70px"
            android:layout_height="wrap_content"
            android:text="时"/>
        <EditText
            android:id="@+id/nlDiffMinute"
            android:layout_width="100px"
            android:layout_height="wrap_content"
            android:text="00"
            android:enabled="false"/>
        <TextView
            android:layout_width="70px"
            android:layout_height="wrap_content"
            android:text="分"/>
        <EditText
            android:id="@+id/nlDiffSecond"
            android:layout_width="100px"
            android:layout_height="wrap_content"
            android:text="00"
            android:enabled="false"/>
        <TextView
            android:layout_width="70px"
            android:layout_height="wrap_content"
            android:text="秒"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <Button
            android:id="@+id/nlUpdBtn"
            android:layout_marginTop="20px"
            android:layout_width="150px"
            android:layout_height="wrap_content"
            android:text="修改"
            android:layout_gravity="center"/>
    <Button
        android:id="@+id/nlStartBtn"
        android:layout_marginTop="20px"
        android:layout_width="700px"
        android:layout_height="wrap_content"
        android:text="开启服务"
        android:layout_gravity="center"/>
    </LinearLayout>
</LinearLayout>
